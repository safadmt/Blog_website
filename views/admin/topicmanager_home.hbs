
    <div class="container">
    <h1 class="mt-5">Topicmanager Dashboared</h1>
    <h6>Topic: {{topic.topic}}</h6>
    <div class="row my-5">
        
        {{#each article}}

        <a id="blog" class="col-md-8" href="/article/{{this._id}}"><div class="card p-3 my-3" id="homearticle">
            <h3>{{this.description}}</h3>
            <small>Topic: {{this.topicdetails.topic}}</small>
            <p class="fw-bold mt-2">{{this.article}}</p>
        </div></a>
        <div class="col-md-2 my-3 d">

            <button class="btn btn-success btn-block d-grid mb-3" onclick="approveBlog('{{this._id}}',2)">Approve</button>
            <button class="btn btn-success btn-block d-grid mb-3" onclick="approveBlog('{{this._id}}',1)">Pending</button>
            <button class="btn btn-danger btn-block d-grid" onclick="approveBlog('{{this._id}}',0)">Reject</button>
            <h5 class="fw-bold text-success mt-4" id="approvedEl">{{this.approved}}</h5>
        </div>
        {{/each}}
        
    </div>
</div>


